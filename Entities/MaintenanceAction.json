{
  "name": "MaintenanceAction",
  "type": "object",
  "properties": {
    "site_id": {
      "type": "string"
    },
    "recommended_action": {
      "type": "string"
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "justification": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "estimated_downtime_if_ignored_hr": {
      "type": "number"
    },
    "estimated_repair_cost_usd": {
      "type": "number"
    },
    "estimated_completion_time_hr": {
      "type": "number"
    },
    "triggered_by_prediction_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "scheduled",
        "in_progress",
        "completed",
        "deferred"
      ],
      "default": "pending"
    },
    "scheduled_date": {
      "type": "string",
      "format": "date"
    },
    "completed_date": {
      "type": "string",
      "format": "date"
    },
    "technician_notes": {
      "type": "string"
    }
  },
  "required": [
    "site_id",
    "recommended_action",
    "priority"
  ]
}